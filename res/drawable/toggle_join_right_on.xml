<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/tg_top_on" android:endColor="@color/tg_bottom_on" android:height="1px"
				android:angle="90" />
			<corners android:bottomRightRadius="0dp" android:bottomLeftRadius="8dp"
				android:topLeftRadius="0dp" android:topRightRadius="8dp" />
		</shape>
	</item>
	<item android:left="1dp">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/tg_top_on" 
				android:endColor="@color/tg_bottom_on" 
				android:height="1px"
				android:angle="90" />
			<corners android:bottomRightRadius="0dp" android:bottomLeftRadius="8dp"
				android:topLeftRadius="0dp" android:topRightRadius="8dp" />
		</shape>
	</item>
</layer-list>
