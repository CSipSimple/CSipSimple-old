<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:gravity="center_horizontal">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1"
		android:orientation="vertical" android:gravity="center_horizontal">
		
		
		<LinearLayout android:id="@+id/topFieldText"
			android:layout_width="fill_parent" android:layout_height="wrap_content" 
			android:background="@drawable/btn_dial_textfield"
			android:layout_marginBottom="10dip" android:orientation="horizontal" android:padding="0dip" >
			<TextView android:text="sip:" 
				android:gravity="left|center_vertical"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:paddingRight="10dip"></TextView>
			<EditText android:layout_height="fill_parent"
				android:layout_width="fill_parent" android:id="@+id/dialtxt_user"
				android:gravity="left|center_vertical"
				android:layout_weight="1" android:background="@android:color/transparent"
				android:textColor="#FFF" android:lines="1" android:inputType="textFilter"></EditText>
			<com.csipsimple.widgets.AccountChooserButton android:layout_width="wrap_content"
				android:layout_weight="0" android:id="@+id/accountChooserButtonText"
				android:layout_height="fill_parent" />
		</LinearLayout>
		<TextView android:id="@+id/dialtxt_domain_helper"
			android:layout_width="fill_parent" android:layout_height="wrap_content" 
			android:gravity="right|center_vertical" android:paddingRight="10dip"/>
	</LinearLayout>
	<LinearLayout android:id="@+id/dial_actions"
		android:layout_width="fill_parent" android:layout_centerHorizontal="true"
		android:layout_height="wrap_content" android:layout_marginTop="2dip"
		android:layout_marginLeft="1dip" android:layout_marginRight="1dip"
		android:orientation="horizontal" android:layout_alignParentBottom="true"
		android:gravity="center" android:padding="10dp" android:layout_weight="0">

		<ImageButton android:layout_width="87dip"
			android:layout_height="50dip" android:layout_gravity="center_vertical|top"
			android:state_enabled="false" android:background="@drawable/btn_dial_domain"
			android:src="@drawable/ic_tab_unselected_dialer" android:id="@+id/domainTextButton" />

		<ImageButton android:layout_height="fill_parent" android:layout_gravity="center"
			android:contentDescription="@string/description_sms_button"
			android:layout_weight="1" android:state_enabled="false" android:background="@drawable/btn_dial_action"
			android:src="@drawable/sms" android:layout_width="fill_parent" android:scaleType="center"
			android:id="@+id/smsTextButton" />
		
		<ImageButton android:layout_height="50dip"
			android:layout_gravity="center_vertical|top" android:layout_weight="1"
			android:state_enabled="false" android:background="@drawable/btn_dial_action"
			android:src="@drawable/ic_dial_action_call" android:layout_width="fill_parent"
			android:scaleType="center" android:id="@+id/dialTextButton" />

		<ImageButton android:layout_width="87dip"
			android:layout_height="50dip" android:layout_gravity="center_vertical|top"
			android:state_enabled="false" android:src="@drawable/ic_dial_action_delete"
			android:background="@drawable/btn_dial_delete" android:id="@+id/deleteTextButton" />
	</LinearLayout>
</LinearLayout>
