<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_centerHorizontal="true"
	android:background="@drawable/clean_rounded" android:orientation="vertical"
	android:gravity="center_horizontal" android:layout_width="fill_parent"
	android:layout_margin="20dip" android:layout_height="wrap_content">
	<Button android:id="@+id/main_btn"
		android:layout_height="wrap_content" android:layout_margin="5dip"
		android:layout_width="fill_parent" android:drawableLeft="@drawable/plus_green" android:padding="7dip" android:text="Open Source CSipSimple SIP stack" android:background="@drawable/btn_download" android:textColor="#FFF" android:shadowDy="1" android:shadowDx="1" android:shadowColor="#33EFEFEF" android:shadowRadius="1" android:textStyle="bold" android:textSize="14dip"></Button>
	<FrameLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_margin="5dip" android:id="@+id/progress_layout" android:visibility="gone"><ProgressBar android:id="@+id/progress_bar" android:layout_width="fill_parent" style="?android:attr/progressBarStyleHorizontal" android:indeterminate="false" android:progress="0" android:progressDrawable="@drawable/progress_green" android:layout_height="34dip"></ProgressBar><TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Downloading..." android:layout_gravity="center" android:textColor="#FFF" android:textStyle="bold"></TextView>
</FrameLayout><TextView android:id="@+id/under_btn_label" android:layout_height="wrap_content"
		android:text="Update found" android:layout_width="fill_parent"
		android:gravity="center_horizontal" android:textAppearance="?android:attr/textAppearanceSmall"
		android:textSize="10dip" android:textColor="#333" android:padding="3dip">
	</TextView>

