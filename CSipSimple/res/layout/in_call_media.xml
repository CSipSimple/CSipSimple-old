<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent">



	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="15dip">
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center" android:src="@drawable/ic_jog_dial_sound_on"></ImageView>
		<SeekBar android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:id="@+id/speaker_level" android:layout_gravity="center" android:max="100"></SeekBar>
	</LinearLayout>

	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="15dip">
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center" android:src="@drawable/ic_jog_dial_voice_search"></ImageView>
		<SeekBar android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:id="@+id/micro_level" android:layout_gravity="center" android:max="100"></SeekBar>
	</LinearLayout>
	
	<CheckBox android:layout_height="wrap_content" android:text="@string/echo_cancellation" android:layout_gravity="center" android:ellipsize="end" android:drawablePadding="2dip" android:paddingLeft="40dip" android:layout_width="fill_parent" android:id="@+id/echo_cancellation"></CheckBox>
	
	<!-- 
	<Button android:layout_height="wrap_content" android:id="@+id/record" android:text="Record" android:layout_gravity="center" android:layout_width="fill_parent"></Button>
	 -->
	
	<LinearLayout android:id="@+id/ok_bar"
		android:orientation="horizontal" style="@android:style/ButtonBar"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="0">
		<Button android:layout_height="wrap_content" android:text="@string/ok"
			android:layout_weight="1" android:layout_gravity="center"
			android:layout_width="wrap_content" android:id="@+id/save_bt"></Button>
			
	</LinearLayout>


</LinearLayout>