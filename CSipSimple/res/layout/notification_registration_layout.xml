<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accounts_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <!-- Unfortunately to be compatible with 1.6 devices, we need to write it as flat file -->

    <RelativeLayout
        android:id="@+id/cell1"
        style="@style/list_left_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingTop="4dip" >

        <LinearLayout
            android:id="@+id/iconContainer1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_indicator_on" />
        </LinearLayout>

        <TextView
            android:id="@+id/account_label1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iconContainer1"
            android:ellipsize="marquee"
            android:paddingLeft="16dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_dark"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>
    <!-- Unfortunately to be compatible with 1.6 devices, we need to write it as flat file -->

    <RelativeLayout
        android:id="@+id/cell2"
        style="@style/list_left_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingTop="4dip" >

        <LinearLayout
            android:id="@+id/iconContainer2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_indicator_on" />
        </LinearLayout>

        <TextView
            android:id="@+id/account_label2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iconContainer2"
            android:ellipsize="marquee"
            android:paddingLeft="16dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_dark"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>
    <!-- Unfortunately to be compatible with 1.6 devices, we need to write it as flat file -->

    <RelativeLayout
        android:id="@+id/cell3"
        style="@style/list_left_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingTop="4dip" >

        <LinearLayout
            android:id="@+id/iconContainer3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_indicator_on" />
        </LinearLayout>

        <TextView
            android:id="@+id/account_label3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iconContainer3"
            android:ellipsize="marquee"
            android:paddingLeft="16dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_dark"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>
    <!-- TODO : add a more label -->

</LinearLayout>