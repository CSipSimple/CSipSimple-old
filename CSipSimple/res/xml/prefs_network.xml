<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/for_incomings">
		<CheckBoxPreference android:title="@string/use_wifi"
			android:defaultValue="true" android:summary="@string/use_wifi_in_desc"
			android:key="use_wifi_in"></CheckBoxPreference>
		<CheckBoxPreference android:title="@string/use_3g" 
			android:summary="@string/use_3g_disclamer"
			android:defaultValue="false" android:key="use_3g_in"></CheckBoxPreference><CheckBoxPreference android:summary="@string/use_3g_disclamer" android:defaultValue="false" android:title="@string/use_edge" android:key="use_edge_in"></CheckBoxPreference><CheckBoxPreference android:summary="@string/use_3g_disclamer" android:defaultValue="false" android:title="@string/use_gsm" android:key="use_gsm_in"></CheckBoxPreference>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/for_outgoings">
		<CheckBoxPreference android:summary="@string/use_wifi_out_desc"
			android:key="use_wifi_out" android:title="@string/use_wifi"
			android:defaultValue="true"></CheckBoxPreference>
		<CheckBoxPreference android:title="@string/use_3g"
			android:summary="@string/use_3g_disclamer"
			android:key="use_3g_out" android:defaultValue="false"></CheckBoxPreference><CheckBoxPreference android:summary="@string/use_3g_disclamer"
			android:defaultValue="false" android:title="@string/use_edge" android:key="use_edge_out"></CheckBoxPreference><CheckBoxPreference android:summary="@string/use_3g_disclamer"
			android:defaultValue="false" android:title="@string/use_gsm" android:key="use_gsm_out"></CheckBoxPreference>

	</PreferenceCategory>
	<PreferenceCategory android:title="@string/perfs">
		<CheckBoxPreference android:summary="@string/lock_wifi_desc"
			android:key="lock_wifi" android:title="@string/lock_wifi"
			android:defaultValue="true"></CheckBoxPreference>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/transport">
		<CheckBoxPreference android:title="@string/enable_udp"
			android:summary="@string/enable_udp_desc"
			android:key="enable_udp" android:defaultValue="true"></CheckBoxPreference>
		<EditTextPreference android:key="network_udp_transport_port"
			android:title="@string/network_udp_transport_port"
			android:numeric="integer"
			android:summary="@string/network_udp_transport_port_desc"
			android:defaultValue="5060"></EditTextPreference>
			
			
	
		<CheckBoxPreference android:title="@string/enable_tcp"
			android:summary="@string/enable_tcp_desc"
			android:key="enable_tcp" android:defaultValue="false"></CheckBoxPreference>
		<EditTextPreference android:key="network_tcp_transport_port"
			android:title="@string/network_tcp_transport_port"
			android:numeric="integer"
			android:summary="@string/network_tcp_transport_port_desc"
			android:defaultValue="5060"></EditTextPreference>
			
		
	</PreferenceCategory>
</PreferenceScreen>
