<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Sip account" >
        <EditTextPreference
            android:key="display_name"
            android:singleLine="true"
            android:title="@string/w_ecs_display_name" />
        <EditTextPreference
            android:inputType="text|textNoSuggestions"
            android:key="phone_number"
            android:singleLine="true"
            android:title="@string/w_ecs_phone_number" />
        <EditTextPreference
            android:inputType="text|textNoSuggestions"
            android:key="user_name"
            android:singleLine="true"
            android:title="@string/w_ecs_user_name" />

        <com.csipsimple.widgets.PasswordPreference
            android:key="password"
            android:password="true"
            android:singleLine="true"
            android:title="@string/w_ecs_password" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Server" >
        <EditTextPreference
            android:inputType="text|textNoSuggestions"
            android:key="server_domain"
            android:singleLine="true"
            android:title="@string/w_ecs_server_domain" />
        <EditTextPreference
            android:inputType="text|textNoSuggestions"
            android:key="server_ip"
            android:singleLine="true"
            android:title="@string/w_common_server" />
    </PreferenceCategory>

</PreferenceScreen>