<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


	<PreferenceScreen android:summary="Connection settings"
		android:title="Network">
		<PreferenceCategory android:summary="(If active service will run in background)"
			android:title="For incoming calls">
			<CheckBoxPreference android:title="Use wifi"
				android:defaultValue="true" android:summary="Use wifi for incoming calls"
				android:key="use_wifi_in"></CheckBoxPreference>
			<CheckBoxPreference android:title="Use 3G"
				android:summary="Use gsm for VoIP (your carrier must allow you to use this option)"
				android:defaultValue="false" android:key="use_3g_in"></CheckBoxPreference>
		</PreferenceCategory>

		<PreferenceCategory android:title="For outgoing call">
			<CheckBoxPreference android:summary="Use wifi for outgoing calls"
				android:key="use_wifi_out" android:title="Use Wifi"
				android:defaultValue="true"></CheckBoxPreference>
			<CheckBoxPreference
				android:summary="Use gsm for VoIP (your carrier must allow you to use this option)"
				android:key="use_3g_out" android:title="Use 3G"
				android:defaultValue="false"></CheckBoxPreference>

		</PreferenceCategory>
		<PreferenceCategory android:title="Misc">
			<ListPreference android:key="network_transport"
				android:summary="Network transport used" android:title="Transport"
				android:entries="@array/transport_choices" android:entryValues="@array/transport_values"
				android:defaultValue="UDP"></ListPreference>
		</PreferenceCategory>


	</PreferenceScreen>
	<PreferenceScreen android:summary="Media stream options"
		android:title="Media">
		<CheckBoxPreference android:summary="Activate echo cancellation"
			android:title="Echo cancellation" android:key="echo_cancellation"
			android:defaultValue="true"></CheckBoxPreference>
		<EditTextPreference android:key="snd_auto_close_time"
			android:title="Auto close time"
			android:numeric="signed"
			android:summary="Time to wait for close audio channel (should be set to fix the android 1.5 bug)"
			android:defaultValue="-1"></EditTextPreference>
		<PreferenceCategory android:title="Codec">
			<EditTextPreference android:key="codec_speex_16000"
				android:title="Speex 16kHz" android:summary="Priority (0 is disabled)"
				android:numeric="integer"
				android:defaultValue="130"></EditTextPreference>
			<EditTextPreference android:key="codec_speex_8000"
				android:title="Speex 8kHz" android:summary="Priority (0 is disabled)"
				android:numeric="integer"
				android:defaultValue="129"></EditTextPreference>
			<EditTextPreference android:key="codec_speex_32000"
				android:title="Speex 32kHz" android:summary="Priority (0 is disabled)"
				android:numeric="integer"
				android:defaultValue="128"></EditTextPreference>
			<EditTextPreference android:key="codec_gsm_8000"
				android:title="GSM 8kHz" android:summary="Priority (0 is disabled)"
				android:numeric="integer"
				android:defaultValue="128"></EditTextPreference>
			<EditTextPreference android:key="codec_pcmu_8000"
				android:title="PCMU 8kHz" android:summary="Priority (0 is disabled)"
				android:numeric="integer"
				android:defaultValue="128"></EditTextPreference>
			<EditTextPreference android:key="codec_pcma_8000"
				android:title="PCMA 8kHz" android:summary="Priority (0 is disabled)"
				android:numeric="integer"
				android:defaultValue="128"></EditTextPreference>
			<EditTextPreference android:key="codec_g722_8000"
				android:title="G722 8kHz" android:summary="Priority (0 is disabled)"
				android:numeric="integer"
				android:defaultValue="128"></EditTextPreference>
		</PreferenceCategory>

</PreferenceScreen>
</PreferenceScreen>
