<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
		    <gradient
		                android:startColor="#ff98c865"
		                android:endColor="#FF57a70a"
		                android:angle="270"/>
		    <stroke android:width="1px" android:color="#FF22AA22"/>
		    <corners android:radius="10dp" />
		</shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
			    <gradient
			                android:startColor="#ff98c865"
			                android:endColor="#FF57a70a"
			                android:angle="270"/>
			    <stroke android:width="1px" android:color="#FF22AA22"/>
			    <corners android:radius="10dp" />
			</shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
           <shape>
			    <gradient
			                android:startColor="#fff7c865"
			                android:endColor="#FFe9a70a"
			                android:angle="270"/>
			    <stroke android:width="1px" android:color="#FFad7517"/>
			    <corners android:radius="10dp" />
			</shape>
        </clip>
    </item>
</layer-list> 